---
import Layout from '../layouts/Layout.astro';
import Map from '../components/Map.astro';
import SearchBox from '../components/SearchBox.astro';

const title = 'AyaMap Airports - Interactive World Airport Map';
const description = 'Explore airports worldwide with our interactive map. Search, filter, and discover detailed information about airports across the globe.';
const canonicalUrl = 'https://ayamap-airports.pages.dev/';
---

<Layout title={title}>
	<!-- SEO Meta Tags -->
	<meta name="description" content={description} slot="head" />
	<meta name="keywords" content="airports, world map, aviation, flight, travel, interactive map, airport codes, IATA, ICAO" slot="head" />
	<meta name="author" content="AyaMap" slot="head" />
	<link rel="canonical" href={canonicalUrl} slot="head" />
	
	<!-- Open Graph Meta Tags -->
	<meta property="og:title" content={title} slot="head" />
	<meta property="og:description" content={description} slot="head" />
	<meta property="og:url" content={canonicalUrl} slot="head" />
	<meta property="og:type" content="website" slot="head" />
	<meta property="og:site_name" content="AyaMap Airports" slot="head" />
	
	<!-- Twitter Card Meta Tags -->
	<meta name="twitter:card" content="summary_large_image" slot="head" />
	<meta name="twitter:title" content={title} slot="head" />
	<meta name="twitter:description" content={description} slot="head" />
	
	<!-- Structured Data -->
	<script type="application/ld+json" slot="head">
	{
		"@context": "https://schema.org",
		"@type": "WebApplication",
		"name": "AyaMap Airports",
		"description": "Interactive world airport map with detailed airport information",
		"url": "https://ayamap-airports.pages.dev/",
		"applicationCategory": "TravelApplication",
		"operatingSystem": "Web Browser",
		"offers": {
			"@type": "Offer",
			"price": "0",
			"priceCurrency": "USD"
		},
		"author": {
			"@type": "Organization",
			"name": "AyaMap"
		}
	}
	</script>

	<main class="min-h-screen bg-gray-50">
		<!-- Hero Section -->
		<section class="bg-white shadow-sm">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
				<div class="text-center mb-8">
					<h1 class="text-4xl font-bold text-gray-900 mb-4">
						AyaMap Airports
					</h1>
					<p class="text-xl text-gray-600 mb-6">
						Explore airports around the world with our interactive map
					</p>
					<div class="flex justify-center">
						<SearchBox />
					</div>
				</div>
			</div>
		</section>

		<!-- Map Section -->
		<section class="flex-1">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
				<div class="bg-white rounded-lg shadow-lg overflow-hidden">
					<div class="p-4 border-b border-gray-200">
						<h2 class="text-lg font-semibold text-gray-900">Interactive Airport Map</h2>
						<p class="text-sm text-gray-600 mt-1">
							Click on airport markers to view details, or use the search above to find specific airports
						</p>
					</div>
					<Map />
				</div>
			</div>
		</section>

		<!-- Quick Stats Section -->
		<section class="bg-white border-t border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="text-center">
						<div class="text-3xl font-bold text-blue-600 mb-2">80K+</div>
						<div class="text-gray-600">Airports Worldwide</div>
					</div>
					<div class="text-center">
						<div class="text-3xl font-bold text-blue-600 mb-2">200+</div>
						<div class="text-gray-600">Countries & Territories</div>
					</div>
					<div class="text-center">
						<div class="text-3xl font-bold text-blue-600 mb-2">Real-time</div>
						<div class="text-gray-600">Interactive Search</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-gray-900 mb-4">Explore Aviation Data</h2>
					<p class="text-xl text-gray-600">Comprehensive airport information at your fingertips</p>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<div class="text-center">
						<div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-gray-900 mb-2">Interactive Map</h3>
						<p class="text-gray-600">Explore airports on a dynamic world map with clustering and zoom</p>
					</div>
					<div class="text-center">
						<div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-gray-900 mb-2">Smart Search</h3>
						<p class="text-gray-600">Find airports by name, code, city, or country with instant results</p>
					</div>
					<div class="text-center">
						<div class="bg-purple-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-gray-900 mb-2">Detailed Info</h3>
						<p class="text-gray-600">Access comprehensive airport data including codes, location, and type</p>
					</div>
					<div class="text-center">
						<div class="bg-orange-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-gray-900 mb-2">Global Coverage</h3>
						<p class="text-gray-600">Browse airports from every country and territory worldwide</p>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
