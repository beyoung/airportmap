---
import Layout from "../layouts/Layout.astro";
import Map from "../components/Map.astro";
import SearchBox from "../components/SearchBox.astro";

const title =
    "Explore Airport Details, Flight Routes & Direct Destinations Worldwide | AyaMap Airports";
const description =
    "Explore 80,000+ airports worldwide on an interactive map. View detailed airport data, flight routes, and direct destinations â€” find where you can fly directly from any airport.";
const canonicalUrl = "https://airport.ayamap.com/";
---

<Layout title={title} description={description}>
    <!-- SEO Meta Tags -->
    <meta
        name="keywords"
        content="airports, live flights, flight departures, flight arrivals, real-time flight status, direct flights, world map, aviation, airport codes, IATA, ICAO"
        slot="head"
    />
    <meta name="author" content="AyaMap" slot="head" />
    <link rel="canonical" href={canonicalUrl} slot="head" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} slot="head" />
    <meta property="og:description" content={description} slot="head" />
    <meta property="og:url" content={canonicalUrl} slot="head" />
    <meta property="og:type" content="website" slot="head" />
    <meta property="og:site_name" content="AyaMap Airports" slot="head" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" slot="head" />
    <meta name="twitter:title" content={title} slot="head" />
    <meta name="twitter:description" content={description} slot="head" />

    <main class="min-h-screen bg-gray-50">
        <!-- Hero Section -->
        <section
            class="bg-gradient-to-b from-primary-900 via-primary-800 to-primary-700 text-white relative overflow-hidden"
        >
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div
                    class="absolute inset-0"
                    style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"
                >
                </div>
            </div>

            <div
                class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24 relative"
            >
                <div class="text-center max-w-4xl mx-auto">
                    <h1
                        class="text-4xl md:text-5xl lg:text-7xl font-bold mb-6 tracking-tight"
                    >
                        Explore <span class="text-primary-200">Airports</span> Worldwide
                    </h1>
                    <p
                        class="text-xl lg:text-2xl text-primary-100 mb-8 leading-relaxed"
                    >
                        Discover 80,000+ airports on an interactive map. View
                        live flights, destinations, and detailed aviation data.
                    </p>
                    <div class="flex justify-center mb-12">
                        <SearchBox />
                    </div>

                    <!-- Quick Links -->
                    <div class="flex flex-wrap justify-center gap-4">
                        <a
                            href="/airports"
                            class="inline-flex items-center px-6 py-3 bg-white text-primary-700 rounded-xl font-medium hover:bg-primary-50 transition-all shadow-lg hover:shadow-xl"
                        >
                            <svg
                                class="w-5 h-5 mr-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                            </svg>
                            Browse Airports
                        </a>
                        <a
                            href="/countries"
                            class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm text-white border border-white/20 rounded-xl font-medium hover:bg-white/20 transition-all"
                        >
                            <svg
                                class="w-5 h-5 mr-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            By Country
                        </a>
                        <a
                            href="/blog"
                            class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm text-white border border-white/20 rounded-xl font-medium hover:bg-white/20 transition-all"
                        >
                            <svg
                                class="w-5 h-5 mr-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                                ></path>
                            </svg>
                            Aviation Blog
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="bg-white border-b border-gray-200">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
                <div class="text-center mb-12">
                    <h2
                        class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4"
                    >
                        Global Aviation Statistics
                    </h2>
                    <p class="text-lg text-gray-600">
                        Comprehensive coverage of airports worldwide
                    </p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="text-center p-6 bg-gradient-to-br from-primary-50 to-white rounded-2xl border border-primary-100 shadow-sm hover:shadow-md transition-shadow"
                    >
                        <div
                            class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-primary-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                            </svg>
                        </div>
                        <div class="text-4xl font-bold text-primary-600 mb-2">
                            80K+
                        </div>
                        <div class="text-gray-600 font-medium">
                            Airports Worldwide
                        </div>
                    </div>
                    <div
                        class="text-center p-6 bg-gradient-to-br from-green-50 to-white rounded-2xl border border-green-100 shadow-sm hover:shadow-md transition-shadow"
                    >
                        <div
                            class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-green-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <div class="text-4xl font-bold text-green-600 mb-2">
                            200+
                        </div>
                        <div class="text-gray-600 font-medium">
                            Countries & Territories
                        </div>
                    </div>
                    <div
                        class="text-center p-6 bg-gradient-to-br from-purple-50 to-white rounded-2xl border border-purple-100 shadow-sm hover:shadow-md transition-shadow"
                    >
                        <div
                            class="inline-flex items-center justify-center w-16 h-16 bg-purple-100 rounded-full mb-4"
                        >
                            <svg
                                class="w-8 h-8 text-purple-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <div class="text-4xl font-bold text-purple-600 mb-2">
                            Real-time
                        </div>
                        <div class="text-gray-600 font-medium">
                            Live Flight Data
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Map Section -->
        <section class="py-12 lg:py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div
                    class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200"
                >
                    <div
                        class="p-6 lg:p-8 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white"
                    >
                        <h2
                            class="text-2xl lg:text-3xl font-bold text-gray-900 mb-2"
                        >
                            Interactive Airport Map
                        </h2>
                        <p class="text-gray-600">
                            Click on airport markers to view details, or use the
                            search above to find specific airports
                        </p>
                    </div>
                    <Map />
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="bg-white py-12 lg:py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2
                        class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4"
                    >
                        Explore Aviation Data
                    </h2>
                    <p class="text-xl text-gray-600">
                        Comprehensive airport information at your fingertips
                    </p>
                </div>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    <div class="text-center group">
                        <div
                            class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform"
                        >
                            <svg
                                class="w-10 h-10 text-blue-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 7m0 13V7"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">
                            Interactive Map
                        </h3>
                        <p class="text-gray-600 leading-relaxed">
                            Explore airports on a dynamic world map with
                            clustering and zoom capabilities
                        </p>
                    </div>
                    <div class="text-center group">
                        <div
                            class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform"
                        >
                            <svg
                                class="w-10 h-10 text-green-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">
                            Smart Search
                        </h3>
                        <p class="text-gray-600 leading-relaxed">
                            Find airports by name, code, city, or country with
                            instant results
                        </p>
                    </div>
                    <div class="text-center group">
                        <div
                            class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform"
                        >
                            <svg
                                class="w-10 h-10 text-purple-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">
                            Detailed Info
                        </h3>
                        <p class="text-gray-600 leading-relaxed">
                            Access comprehensive airport data including codes,
                            location, and type
                        </p>
                    </div>
                    <div class="text-center group">
                        <div
                            class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-2xl w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform"
                        >
                            <svg
                                class="w-10 h-10 text-orange-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">
                            Global Coverage
                        </h3>
                        <p class="text-gray-600 leading-relaxed">
                            Browse airports from every country and territory
                            worldwide
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Smooth scrolling */
    html {
        scroll-behavior: smooth;
    }
</style>
