    <meta name="msvalidate.01" content="BD79A06DDF58F498421D775BF3271EF8" />
    <meta name="yandex-verification" content="bc2c853a937d1312" />
  </head>
  <body class="bg-gray-50 text-gray-900">
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }
</style>

<script>
  import "../styles/global.css";
</script>
